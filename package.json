  "scripts": {
    "start": "react-scripts start",
    "dev:server": "NODE_ENV=development nodemon server/index.js --watch server --exec babel-node --presets react-app",
    "migrate": "rethinkdb-migrate -f ./server/migrations/config.js",
    "db:migrate": "npm run migrate -- up initial-data",
    "db:drop": "npm run migrate -- down initial-data",
    "db:seed": "node server/migrations/seed/index.js",
    "now-start": "serve ./build --single",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
